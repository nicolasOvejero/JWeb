<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.ovejero.controler.Home</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>com.ovejero.controler.Contact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>News</servlet-name>
        <servlet-class>com.ovejero.controler.News</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>News</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Creation</servlet-name>
        <servlet-class>com.ovejero.controler.Creation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Creation</servlet-name>
        <url-pattern>/creation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Catalogue</servlet-name>
        <servlet-class>com.ovejero.controler.Catalogue</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Catalogue</servlet-name>
        <url-pattern>/catalogue</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.ovejero.controler.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminGlobal</servlet-name>
        <servlet-class>com.ovejero.controler.AdminGlobal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminGlobal</servlet-name>
        <url-pattern>/administrator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminUser</servlet-name>
        <servlet-class>com.ovejero.controler.AdminUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUser</servlet-name>
        <url-pattern>/administrator/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminNewsAdd</servlet-name>
        <servlet-class>com.ovejero.controler.AdminNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminNewsAdd</servlet-name>
        <url-pattern>/administrator/news/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminNewsDelete</servlet-name>
        <servlet-class>com.ovejero.controler.AdminDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminNewsDelete</servlet-name>
        <url-pattern>/administrator/news/delete</url-pattern>
    </servlet-mapping>
</web-app>